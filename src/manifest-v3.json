{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "default_locale": "en",
  "homepage_url": "https://emoji-gen.ninja",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "{{version}}",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        {{#isDev}}
        "*://localhost/*",
        {{/isDev}}
        "*://emoji-gen.ninja/*"
      ],
      "js": [
        "content_scripts.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": [
    {{#isDev}}
    "*://localhost/*",
    {{/isDev}}
    "https://emoji-gen.ninja/*",
    "https://*.slack.com/*"
  ]
}
